// electron/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022", // Updated target
    "module": "NodeNext", // Keep NodeNext for ESM
    "lib": ["ES2022", "DOM"], // Updated lib, keep DOM
    "outDir": "../dist", // Output compiled JS to the dist folder in the root
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext", // Keep NodeNext
    "sourceMap": true // Source Map is recommended for development
  },
  "include": ["main.mts", "preload.mts"], // Update to main.mts
  "exclude": ["node_modules"]
}