// electron/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020", // Updated target
    "module": "NodeNext", // Changed from CommonJS to ESNext for ESM
    "lib": ["ES2020", "DOM"], // Include DOM because preload might operate on DOM
    "outDir": "../dist", // Output compiled JS to the dist folder in the root
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext", // Use NodeNext for modern Node resolution
    "sourceMap": true // Source Map is recommended for development
  },
  "include": ["main.ts", "preload.ts"], // Specify files to compile
  "exclude": ["node_modules"]
}