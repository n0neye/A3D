// electron/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2018", // Electron usually supports newer ES versions
    "module": "CommonJS", // Electron Main Process uses CommonJS
    "lib": ["ES2018", "DOM"], // Include DOM because preload might operate on DOM
    "outDir": "../dist", // Output compiled JS to the dist folder in the root
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true // Source Map is recommended for development
  },
  "include": ["main.ts", "preload.ts"], // Specify files to compile
  "exclude": ["node_modules"]
}